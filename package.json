{
  "name": "slice-monorepo",
  "private": true,
  "version": "0.2.1",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:desktop": "cd apps/desktop && bun run tauri dev",
    "dev:landing": "cd apps/landing && bun run dev",
    "build:desktop": "cd apps/desktop && bun run tauri build",
    "build:landing": "cd apps/landing && bun run build",
    "release": "bash scripts/release.sh",
    "release:draft": "bash scripts/release.sh --draft",
    "release:skip-build": "bash scripts/release.sh --skip-build"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.6.3",
    "vite": "^6.0.0"
  }
}